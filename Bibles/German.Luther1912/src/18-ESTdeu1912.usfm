\v 1  \w Nach|strong="H310"\w* \w diesen|strong="H428"\w* \w Geschichten|strong="H1697"\w*, da der \w Grimm|strong="H2534"\w* des \w Königs|strong="H4428"\w* \w Ahasveros|strong="H325"\w* sich gelegt \w hatte|strong="H7918" x-morph="strongMorph:TH8800"\w*, gedachte \w er|strong="H2142" x-morph="strongMorph:TH8804"\w* an \w Vasthi|strong="H2060"\w*, \w was|strong="H834"\w* sie getan \w hatte|strong="H6213" x-morph="strongMorph:TH8804"\w* und \w was|strong="H834"\w* \w über|strong="H5921"\w* sie beschlossen \w war|strong="H1504" x-morph="strongMorph:TH8738"\w*. 
\v 2 Da \w sprachen|strong="H559" x-morph="strongMorph:TH8799"\w* die \w Diener|strong="H5288"\w* des \w Königs|strong="H4428"\w*, die ihm \w dienten|strong="H8334" x-morph="strongMorph:TH8764"\w*: Man \w suche|strong="H1245" x-morph="strongMorph:TH8762"\w* dem \w König|strong="H4428"\w* \w junge|strong="H5291"\w*, \w schöne|strong="H2896"\w*\w |strong="H4758"\w* \w Jungfrauen|strong="H1330"\w*, 
\v 3 und der \w König|strong="H4428"\w* \w bestellte|strong="H6485" x-morph="strongMorph:TH8686"\w* \w Männer|strong="H6496"\w* in \w allen|strong="H3605"\w* \w Landen|strong="H4082"\w* seines \w Königreichs|strong="H4438"\w*, daß sie \w allerlei|strong="H3605"\w* \w junge|strong="H5291"\w*, \w schöne|strong="H2896"\w*\w |strong="H4758"\w* \w Jungfrauen|strong="H1330"\w* \w zusammenbringen|strong="H6908" x-morph="strongMorph:TH8799"\w* \w gen|strong="H413"\w* \w Schloß|strong="H1002"\w* \w Susan|strong="H7800"\w* \w ins|strong="H413"\w* \w Frauenhaus|strong="H1004"\w*\w |strong="H802"\w* \w unter|strong="H413"\w* der \w Hand|strong="H3027"\w* \w Hegais|strong="H1896"\w*, des \w Königs|strong="H4428"\w* \w Kämmerers|strong="H5631"\w*, der der \w Weiber|strong="H802"\w* \w wartet|strong="H8104" x-morph="strongMorph:TH8802"\w*, und man \w gebe|strong="H5414" x-morph="strongMorph:TH8800"\w* ihnen ihren \w Schmuck|strong="H8562"\w*; 
\v 4 und welche \w Dirne|strong="H5291"\w* \w dem|strong="H834"\w* \w König|strong="H4428"\w* \w gefällt|strong="H5869"\w*\w |strong="H3190" x-morph="strongMorph:TH8799"\w*, die werde \w Königin|strong="H4427" x-morph="strongMorph:TH8799"\w* an \w Vasthis|strong="H2060"\w* \w Statt|strong="H8478"\w*. \w Das|strong="H1697"\w* \w gefiel|strong="H3190" x-morph="strongMorph:TH8799"\w*\w |strong="H5869"\w* dem \w König|strong="H4428"\w*, und er \w tat|strong="H6213" x-morph="strongMorph:TH8799"\w* \w also|strong="H3651"\w*. 
\v 5 Es \w war|strong="H1961" x-morph="strongMorph:TH8804"\w* aber ein \w jüdischer|strong="H3064"\w* \w Mann|strong="H376"\w* zu \w Schloß|strong="H1002"\w* \w Susan|strong="H7800"\w*, der \w hieß|strong="H8034"\w* \w Mardochai|strong="H4782"\w*, ein \w Sohn|strong="H1121"\w* \w Jairs|strong="H2971"\w*, des \w Sohnes|strong="H1121"\w* \w Simeis|strong="H8096"\w*, des \w Sohnes|strong="H1121"\w* des \w Kis|strong="H7027"\w*, ein \w Benjaminiter|strong="H1145"\w*, 
