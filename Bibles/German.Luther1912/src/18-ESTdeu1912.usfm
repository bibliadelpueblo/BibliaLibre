\v 4 daß er sehen \w ließe|strong="H7200" x-morph="strongMorph:TH8687"\w* den \w herrlichen|strong="H3519"\w* \w Reichtum|strong="H6239"\w* seines \w Königreichs|strong="H4438"\w* und die \w köstliche|strong="H8597"\w* \w Pracht|strong="H3366"\w* seiner \w Majestät|strong="H1420"\w* \w viele|strong="H7227"\w* \w Tage|strong="H3117"\w* lang, \w hundert|strong="H3967"\w* und \w achtzig|strong="H8084"\w* \w Tage|strong="H3117"\w*. 
\v 5 Und da \w die|strong="H428"\w* \w Tage|strong="H3117"\w* aus \w waren|strong="H4390" x-morph="strongMorph:TH8800"\w*, \w machte|strong="H6213" x-morph="strongMorph:TH8804"\w* der \w König|strong="H4428"\w* ein \w Mahl|strong="H4960"\w* \w allem|strong="H3605"\w* \w Volk|strong="H5971"\w*, das zu \w Schloß|strong="H1002"\w* \w Susan|strong="H7800"\w* \w war|strong="H4672" x-morph="strongMorph:TH8737"\w*,\w |strong="H4480"\w* \w Großen|strong="H1419"\w* \w und|strong="H5704"\w* \w Kleinen|strong="H6996"\w*, \w sieben|strong="H7651"\w* \w Tage|strong="H3117"\w* lang im \w Hofe|strong="H2691"\w* des \w Gartens|strong="H1594"\w* am \w Hause|strong="H1055"\w* des \w Königs|strong="H4428"\w*. 
\v 6 Da hingen \w weiße|strong="H2353"\w*, \w rote|strong="H3768"\w* und \w blaue|strong="H8504"\w* Tücher, \w mit|strong="H270" x-morph="strongMorph:TH8803"\w* \w leinenen|strong="H948"\w* und \w scharlachnen|strong="H713"\w* \w Seilen|strong="H2256"\w* gefaßt, \w in|strong="H5921"\w* \w silbernen|strong="H3701"\w* \w Ringen|strong="H1550"\w* auf \w Marmorsäulen|strong="H8336"\w*\w |strong="H5982"\w*. Die \w Bänke|strong="H4296"\w* waren \w golden|strong="H2091"\w* und \w silbern|strong="H3701"\w* \w auf|strong="H5921"\w* \w Pflaster|strong="H7531"\w* von \w grünem|strong="H923"\w*, \w weißem|strong="H8336"\w*, \w gelbem|strong="H1858"\w* und schwarzen \w Marmor|strong="H5508"\w*. 
\v 7 Und das \w Getränk|strong="H8248" x-morph="strongMorph:TH8687"\w* trug man in \w goldenen|strong="H2091"\w* \w Gefäßen|strong="H3627"\w* und \w immer|strong="H3627"\w* \w andern|strong="H8138" x-morph="strongMorph:TH8802"\w* \w und|strong="H4480"\w* andern \w Gefäßen|strong="H3627"\w*, und \w königlichen|strong="H4438"\w* \w Wein|strong="H3196"\w* die \w Menge|strong="H7227"\w*, wie denn der \w König|strong="H4428"\w* \w vermochte|strong="H3027"\w*. 
\v 8 Und man \w setzte|strong="H597" x-morph="strongMorph:TH8802"\w* \w niemand|strong="H369"\w*, was er \w trinken|strong="H8360"\w* \w sollte|strong="H1881"\w*; \w denn|strong="H3588"\w* der \w König|strong="H4428"\w* \w hatte|strong="H5921"\w* \w allen|strong="H3605"\w* \w Vorstehern|strong="H7227"\w*\w |strong="H1004"\w* \w befohlen|strong="H3245" x-morph="strongMorph:TH8765"\w*, daß ein \w jeglicher|strong="H376"\w*\w |strong="H376"\w* sollte \w tun|strong="H6213" x-morph="strongMorph:TH8800"\w*, \w wie|strong="H7522"\w* es ihm wohl gefiel. 
\v 9 Und die \w Königin|strong="H4436"\w* \w Vasthi|strong="H2060"\w* \w machte|strong="H6213" x-morph="strongMorph:TH8804"\w* \w auch|strong="H1571"\w* ein \w Mahl|strong="H4960"\w* für die \w Weiber|strong="H802"\w* im \w königlichen|strong="H4438"\w* \w Hause|strong="H1004"\w* \w des|strong="H834"\w* \w Königs|strong="H4428"\w* \w Ahasveros|strong="H325"\w*. 
\v 10 Und am \w siebenten|strong="H7637"\w* \w Tage|strong="H3117"\w*, da der \w König|strong="H4428"\w* \w gutes|strong="H3820"\w* Muts \w war|strong="H2896"\w* vom \w Wein|strong="H3196"\w*, \w hieß|strong="H559" x-morph="strongMorph:TH8804"\w* er \w Mehuman|strong="H4104"\w*, \w Bistha|strong="H968"\w*, \w Harbona|strong="H2726"\w*, \w Bigtha|strong="H903"\w*, \w Abagtha|strong="H5"\w*, \w Sethar|strong="H2242"\w* und \w Charkas|strong="H3752"\w*, die \w sieben|strong="H7651"\w* \w Kämmerer|strong="H5631"\w*, die \w vor|strong="H6440"\w* dem \w König|strong="H4428"\w* \w Ahasveros|strong="H325"\w* \w dienten|strong="H8334" x-morph="strongMorph:TH8764"\w*, 
\v 11 daß sie die \w Königin|strong="H4436"\w* \w Vasthi|strong="H2060"\w* \w holten|strong="H935" x-morph="strongMorph:TH8687"\w* \w vor|strong="H6440"\w* den \w König|strong="H4428"\w* mit der \w königlichen|strong="H4438"\w* \w Krone|strong="H3804"\w*, daß er den \w Völkern|strong="H5971"\w* und \w Fürsten|strong="H8269"\w* \w zeigte|strong="H7200" x-morph="strongMorph:TH8687"\w* ihre \w Schöne|strong="H3308"\w*; \w denn|strong="H3588"\w* \w sie|strong="H1931"\w* war \w schön|strong="H2896"\w*\w |strong="H4758"\w*. 
\v 12 Aber die \w Königin|strong="H4436"\w* \w Vasthi|strong="H2060"\w* wollte \w nicht|strong="H3985" x-morph="strongMorph:TH8762"\w* \w kommen|strong="H935" x-morph="strongMorph:TH8800"\w* nach dem \w Wort|strong="H1697"\w* des \w Königs|strong="H4428"\w* \w durch|strong="H834"\w* \w seine|strong="H3027"\w* \w Kämmerer|strong="H5631"\w*. Da ward der \w König|strong="H4428"\w* \w sehr|strong="H3966"\w* \w zornig|strong="H7107" x-morph="strongMorph:TH8799"\w*, und sein \w Grimm|strong="H2534"\w* \w entbrannte|strong="H1197" x-morph="strongMorph:TH8804"\w* in ihm. 
\v 13 Und der \w König|strong="H4428"\w* \w sprach|strong="H559" x-morph="strongMorph:TH8799"\w* zu den \w Weisen|strong="H2450"\w*, die sich auf die \w Zeiten|strong="H6256"\w* \w verstanden|strong="H3045" x-morph="strongMorph:TH8802"\w* (\w denn|strong="H3588"\w* des \w Königs|strong="H4428"\w* \w Sachen|strong="H1697"\w* mußten \w geschehen|strong="H6440"\w* vor \w allen|strong="H3605"\w*, die sich auf \w Recht|strong="H1881"\w* und \w Händel|strong="H1779"\w* \w verstanden|strong="H3045" x-morph="strongMorph:TH8802"\w*; 
\v 14 die \w nächsten|strong="H7138"\w* aber \w die|strong="H413"\w* bei ihm waren \w Charsena|strong="H3771"\w*, \w Sethar|strong="H8369"\w*, \w Admatha|strong="H133"\w*, \w Tharsis|strong="H8659"\w*, \w Meres|strong="H4825"\w*, \w Marsena|strong="H4826"\w* und \w Memuchan|strong="H4462"\w*, die \w sieben|strong="H7651"\w* \w Fürsten|strong="H8269"\w* der \w Perser|strong="H6539"\w* und \w Meder|strong="H4074"\w*, die das \w Angesicht|strong="H6440"\w* des \w Königs|strong="H4428"\w* \w sahen|strong="H7200" x-morph="strongMorph:TH8802"\w* und \w saßen|strong="H3427" x-morph="strongMorph:TH8802"\w* \w obenan|strong="H7223"\w* im \w Königreich|strong="H4438"\w*), 
\v 15  \w was|strong="H4100"\w* für ein \w Recht|strong="H1881"\w* man an der \w Königin|strong="H4436"\w* \w Vasthi|strong="H2060"\w* tun \w sollte|strong="H6213" x-morph="strongMorph:TH8800"\w*, \w darum|strong="H5921"\w*\w |strong="H834"\w* daß sie \w nicht|strong="H3808"\w* getan \w hatte|strong="H6213" x-morph="strongMorph:TH8804"\w* nach dem \w Wort|strong="H3982"\w* des \w Königs|strong="H4428"\w*\w |strong="H325"\w* \w durch|strong="H3027"\w* seine \w Kämmerer|strong="H5631"\w*. 
\v 16 Da \w sprach|strong="H559" x-morph="strongMorph:TH8799"\w* \w Memuchan|strong="H4462"\w* \w vor|strong="H6440"\w* dem \w König|strong="H4428"\w* und den \w Fürsten|strong="H8269"\w*: Die \w Königin|strong="H4436"\w* \w Vasthi|strong="H2060"\w* hat \w nicht|strong="H3808"\w* \w allein|strong="H909"\w* \w an|strong="H5921"\w* dem \w König|strong="H4428"\w* übel \w getan|strong="H5753" x-morph="strongMorph:TH8804"\w*, \w sondern|strong="H3588"\w* auch \w an|strong="H5921"\w* \w allen|strong="H3605"\w* \w Fürsten|strong="H8269"\w* und \w an|strong="H5921"\w* \w allen|strong="H3605"\w* \w Völkern|strong="H5971"\w* \w in|strong="H834"\w* \w allen|strong="H3605"\w* \w Landen|strong="H4082"\w* des \w Königs|strong="H4428"\w* \w Ahasveros|strong="H325"\w*. 
\v 17  \w Denn|strong="H3588"\w* es wird solche \w Tat|strong="H1697"\w* der \w Königin|strong="H4436"\w* \w auskommen|strong="H3318" x-morph="strongMorph:TH8799"\w* \w zu|strong="H5921"\w* \w allen|strong="H3605"\w* \w Weibern|strong="H802"\w*, daß sie ihre \w Männer|strong="H1167"\w* \w verachten|strong="H959" x-morph="strongMorph:TH8687"\w* vor ihren \w Augen|strong="H5869"\w* und werden \w sagen|strong="H559" x-morph="strongMorph:TH8800"\w*: Der \w König|strong="H4428"\w* \w Ahasveros|strong="H325"\w* \w hieß|strong="H559" x-morph="strongMorph:TH8804"\w* die \w Königin|strong="H4436"\w* \w Vasthi|strong="H2060"\w* \w vor|strong="H6440"\w* sich \w kommen|strong="H935" x-morph="strongMorph:TH8687"\w*; aber sie \w wollte|strong="H935" x-morph="strongMorph:TH8804"\w* \w nicht|strong="H3808"\w*. 
\v 18  \w So|strong="H2088"\w* werden \w nun|strong="H3117"\w* die \w Fürstinnen|strong="H8282"\w* in \w Persien|strong="H6539"\w* und \w Medien|strong="H4074"\w* auch so \w sagen|strong="H559" x-morph="strongMorph:TH8799"\w* zu \w allen|strong="H3605"\w* \w Fürsten|strong="H8269"\w* des \w Königs|strong="H4428"\w*, \w wenn|strong="H834"\w* sie solche \w Tat|strong="H1697"\w* der \w Königin|strong="H4436"\w* \w hören|strong="H8085" x-morph="strongMorph:TH8804"\w*; so wird sich \w Verachtens|strong="H963"\w* und \w Zorn|strong="H7110"\w* \w genug|strong="H1767"\w* erheben. 
\v 19  \w Gefällt|strong="H2895" x-morph="strongMorph:TH8804"\w*\w |strong="H5921"\w* \w es|strong="H518"\w* dem \w König|strong="H4428"\w*, so lasse man ein \w königlich|strong="H4438"\w* \w Gebot|strong="H1697"\w* \w von|strong="H4480"\w*\w |strong="H6440"\w* ihm \w ausgehen|strong="H3318" x-morph="strongMorph:TH8799"\w* und \w schreiben|strong="H3789" x-morph="strongMorph:TH8735"\w* nach der \w Perser|strong="H6539"\w* und \w Meder|strong="H4074"\w* \w Gesetz|strong="H1881"\w*, welches man \w nicht|strong="H3808"\w* darf \w übertreten|strong="H5674" x-morph="strongMorph:TH8799"\w*: \w daß|strong="H834"\w* \w Vasthi|strong="H2060"\w* \w nicht|strong="H3808"\w* mehr \w vor|strong="H6440"\w* den \w König|strong="H4428"\w* \w Ahasveros|strong="H325"\w* \w komme|strong="H935" x-morph="strongMorph:TH8799"\w*, und der \w König|strong="H4428"\w* \w gebe|strong="H5414" x-morph="strongMorph:TH8799"\w* ihre \w königliche|strong="H4438"\w* Würde einer \w andern|strong="H7468"\w*, die \w besser|strong="H2896"\w* ist \w denn|strong="H4480"\w* sie. 
\v 20 Und es \w erschalle|strong="H8085" x-morph="strongMorph:TH8738"\w* dieser \w Befehl|strong="H6599"\w* des \w Königs|strong="H4428"\w*, \w den|strong="H834"\w* er geben \w wird|strong="H6213" x-morph="strongMorph:TH8799"\w*, in sein \w ganzes|strong="H3605"\w* \w Reich|strong="H4438"\w*, \w welches|strong="H3588"\w*\w |strong="H1931"\w* \w groß|strong="H7227"\w* ist, daß \w alle|strong="H3605"\w* \w Weiber|strong="H802"\w* ihre \w Männer|strong="H1167"\w* in \w Ehren|strong="H3366"\w* \w halten|strong="H5414" x-morph="strongMorph:TH8799"\w*, \w unter|strong="H4480"\w* \w Großen|strong="H1419"\w* \w und|strong="H5704"\w* \w Kleinen|strong="H6996"\w*. 
\v 21  \w Das|strong="H1697"\w* \w gefiel|strong="H3190" x-morph="strongMorph:TH8799"\w* \w dem|strong="H5869"\w* \w König|strong="H4428"\w* und den \w Fürsten|strong="H8269"\w*; und der \w König|strong="H4428"\w* \w tat|strong="H6213" x-morph="strongMorph:TH8799"\w* nach dem \w Wort|strong="H1697"\w* \w Memuchans|strong="H4462"\w*. 
\v 22 Da wurden \w Briefe|strong="H5612"\w* \w ausgesandt|strong="H7971" x-morph="strongMorph:TH8799"\w* \w in|strong="H413"\w* \w alle|strong="H3605"\w* \w Länder|strong="H4082"\w* des \w Königs|strong="H4428"\w*, \w in|strong="H413"\w* ein \w jegliches|strong="H4082"\w* \w Land|strong="H4082"\w* nach seiner \w Schrift|strong="H3791"\w* und \w zu|strong="H413"\w* \w jeglichem|strong="H5971"\w* \w Volk|strong="H5971"\w* nach seiner \w Sprache|strong="H3956"\w*: daß ein \w jeglicher|strong="H3605"\w* \w Mann|strong="H376"\w* der \w Oberherr|strong="H8323" x-morph="strongMorph:TH8802"\w* in seinem \w Hause|strong="H1004"\w* \w sei|strong="H1961" x-morph="strongMorph:TH8800"\w* und ließe \w reden|strong="H1696" x-morph="strongMorph:TH8764"\w* nach der \w Sprache|strong="H3956"\w* seines \w Volkes|strong="H5971"\w*. 
